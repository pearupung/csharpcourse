@page
@model NewMusicWebApp.Pages.Performers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Performer[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Performer[0].LastName)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Performer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PerformerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PerformerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PerformerId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


<div>
    <a asp-page="/Tracks/Index" asp-route-djid="@Model.DjId">Back to tracks</a>
</div>
