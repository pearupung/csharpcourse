@page
@model NewMusicWebApp.Pages.Tracks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Track[0].TrackName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Track[0].TrackLengthInSeconds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Track[0].Category)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Track) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrackName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackLengthInSeconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrackId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TrackId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TrackId">Delete</a> |
                <a asp-page="/Performers/Index" asp-route-trackid="@item.TrackId" asp-route-djid="@Model.DjId">See Performers</a>
            </td>
        </tr>
    }
    </tbody>
</table>


<div>
    <a asp-page="/Index" >Back to DJs</a>
</div>
