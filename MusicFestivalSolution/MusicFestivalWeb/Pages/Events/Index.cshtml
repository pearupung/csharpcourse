@model MusicFestivalWeb.Pages.Events.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].TicketCountPrediction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].TicketPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].PreparationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].CleanUpTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Venue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Event) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketCountPrediction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreparationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CleanUpTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.VenueId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EventId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EventId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EventId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
