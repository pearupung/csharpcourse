@page
@model MusicFestivalWeb.Pages.Tracks.AddAuthorTrackViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Add author</h1>

<div>
    <h4>Track</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Track.TrackName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Track.TrackName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Track.LengthInSeconds)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Track.LengthInSeconds)
        </dd>
    </dl>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Track.TrackAuthors[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Track.TrackAuthors[0].TrackAuthorType)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Track.TrackAuthors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Track.TrackName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrackAuthorType.TrackAuthorTypeName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TrackAuthorId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TrackAuthorId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TrackAuthorId">Delete</a>
                </td>
            </tr>
        }
        <tr>
        <form method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <td class="form-group">
                <select asp-for="NewTrackAuthor.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
            </td>
            <td class="form-group">
                <select asp-for="NewTrackAuthor.TrackAuthorTypeId" class="form-control" asp-items="ViewBag.TrackAuthorTypeId"></select>
            </td>
            <td class="form-group">
                <input type="submit" value="Add an author" class="btn btn-primary"/>
            </td>
        </form>
        </tr>
        </tbody>
    </table>
    
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Track.TrackId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>