@page
@model MusicFestivalWeb.Pages.ParticipantTypes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ParticipantType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ParticipantType.ParticipantTypeName" class="control-label"></label>
                <input asp-for="ParticipantType.ParticipantTypeName" class="form-control" />
                <span asp-validation-for="ParticipantType.ParticipantTypeName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ParticipantType.GetsHourly" /> @Html.DisplayNameFor(model => model.ParticipantType.GetsHourly)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ParticipantType.HourlyWage" class="control-label"></label>
                <input asp-for="ParticipantType.HourlyWage" class="form-control" />
                <span asp-validation-for="ParticipantType.HourlyWage" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ParticipantType.GetsFixedSum" /> @Html.DisplayNameFor(model => model.ParticipantType.GetsFixedSum)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ParticipantType.FixedSum" class="control-label"></label>
                <input asp-for="ParticipantType.FixedSum" class="form-control" />
                <span asp-validation-for="ParticipantType.FixedSum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
