@model MusicFestivalWeb.Pages.Venues.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venue[0].VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue[0].VenueAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue[0].HourlyPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue[0].SimplePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Venue) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VenueAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourlyPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SimplePrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VenueId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.VenueId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.VenueId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
