@page
@model MusicFestivalWeb.Pages.SetTracks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SetTrack</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SetTrack.SetTrackId" />
            <div class="form-group">
                <label asp-for="SetTrack.QueueNumber" class="control-label"></label>
                <input asp-for="SetTrack.QueueNumber" class="form-control" />
                <span asp-validation-for="SetTrack.QueueNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetTrack.PlannedPlayTime" class="control-label"></label>
                <input asp-for="SetTrack.PlannedPlayTime" class="form-control" />
                <span asp-validation-for="SetTrack.PlannedPlayTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetTrack.ActualPlayTime" class="control-label"></label>
                <input asp-for="SetTrack.ActualPlayTime" class="form-control" />
                <span asp-validation-for="SetTrack.ActualPlayTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetTrack.SetId" class="control-label"></label>
                <select asp-for="SetTrack.SetId" class="form-control" asp-items="ViewBag.SetId"></select>
                <span asp-validation-for="SetTrack.SetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetTrack.TrackId" class="control-label"></label>
                <select asp-for="SetTrack.TrackId" class="form-control" asp-items="ViewBag.TrackId"></select>
                <span asp-validation-for="SetTrack.TrackId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
