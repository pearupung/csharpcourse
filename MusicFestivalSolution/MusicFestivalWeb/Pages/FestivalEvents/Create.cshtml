@page
@model MusicFestivalWeb.Pages.FestivalEvents.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FestivalEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FestivalEvent.EventId" class="control-label"></label>
                <select asp-for="FestivalEvent.EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FestivalEvent.FestivalId" class="control-label"></label>
                <select asp-for="FestivalEvent.FestivalId" class ="form-control" asp-items="ViewBag.FestivalId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FestivalEvent.IsIncludedInFestivalPass" /> @Html.DisplayNameFor(model => model.FestivalEvent.IsIncludedInFestivalPass)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
