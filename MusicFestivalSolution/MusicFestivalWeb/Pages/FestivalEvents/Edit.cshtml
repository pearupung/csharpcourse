@page
@model MusicFestivalWeb.Pages.FestivalEvents.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FestivalEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FestivalEvent.FestivalEventId" />
            <div class="form-group">
                <label asp-for="FestivalEvent.EventId" class="control-label"></label>
                <select asp-for="FestivalEvent.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="FestivalEvent.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FestivalEvent.FestivalId" class="control-label"></label>
                <select asp-for="FestivalEvent.FestivalId" class="form-control" asp-items="ViewBag.FestivalId"></select>
                <span asp-validation-for="FestivalEvent.FestivalId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FestivalEvent.IsIncludedInFestivalPass" /> @Html.DisplayNameFor(model => model.FestivalEvent.IsIncludedInFestivalPass)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
