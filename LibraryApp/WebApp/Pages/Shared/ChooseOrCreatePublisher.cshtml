@model WebApp.Pages.Shared._ChooseOrCreatePublisher

<div class="form-group border">
    <p>Choose a publisher</p>
    <label asp-for="PublishersSelectlist" class="control-label"></label>
    <select asp-for="Publisher" class="form-control" asp-items="Model.PublishersSelectlist"></select>
    <p>or create one yourself:</p>
    <div class="form-group">
        <label asp-for="NewPublisher" class="control-label"></label>
        <input asp-for="NewPublisher" class="form-control"/>
        <span asp-validation-for="NewPublisher" class="text-danger"></span>
    </div>
    <button name="submit" value="addPublisher">Add publisher!</button>
</div>