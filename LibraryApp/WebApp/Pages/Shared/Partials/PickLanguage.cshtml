@model PickLanguageModel

  <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
    <div class="card-header">Choose a language</div>
      <div class="card-body">
        <label asp-for="LanguageId" class="control-label"></label>
        <select asp-for="LanguageId" class="form-control" asp-items="Model.LanguagesSelectlist"></select>
        <div class="text-center"> <button class="btn btn-info" type="submit" name="languagePick" value="pick">Pick from these!</button></div>
        <div class="form-group">
            <label asp-for="NewLanguageName" class="control-label"></label>
            <input asp-for="NewLanguageName" class="form-control"/>
            <span asp-validation-for="NewLanguageName" class="text-danger"></span>
        </div>
        <div class="text-center"> <button class="btn btn-info" type="submit" name="languagePick" value="add">Pick this new one instead!</button></div>
      </div>
</div>
