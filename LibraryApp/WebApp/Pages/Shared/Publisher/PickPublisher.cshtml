@model PickPublisherModel

<div class="form-group border">
        <p>Choose a publisher</p>
        <label asp-for="PublisherId" class="control-label"></label>
        <select asp-for="PublisherId" class="form-control" asp-items="@Model.PublishersSelectlist"></select>
        <button type="submit" name="publisherPick" value="pick">Pick!</button>
        <p>or create one yourself:</p>
        <div class="form-group">
            <label asp-for="NewPublisherName" class="control-label"></label>
            <input asp-for="NewPublisherName" class="form-control"/>
            <span asp-validation-for="NewPublisherName" class="text-danger"></span>
        </div>
        <button type="submit" name="publisherPick" value="add">Add and pick this one!</button>
</div>