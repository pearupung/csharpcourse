@page
@model WebApp.Pages.Reviews.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All"  class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Review.ReviewText" class="control-label"></label>
                <input asp-for="Review.ReviewText" class="form-control" />
                <span asp-validation-for="Review.ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.TimePosted" class="control-label"></label>
                <input asp-for="Review.TimePosted" class="form-control" />
                <span asp-validation-for="Review.TimePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Title" class="control-label"></label>
                <input asp-for="Review.Title" class="form-control" />
                <span asp-validation-for="Review.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Stars" class="control-label"></label>
                <input asp-for="Review.Stars" class="form-control" />
                <span asp-validation-for="Review.Stars" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.BookId" class="control-label"></label>
                <select asp-for="Review.BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
