@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


@for (var i = 0; i < Model.SearchButtons.Count; i++)
{
    var item = Model.SearchButtons[i];
    <input asp-for="SearchButtons[i].IsChecked" class="haioo"/>
    <label
        for="SearchButtons_@(i)__IsChecked"
        style="width: 8em"
        class="toggle-label @(item.IsChecked ? "btn btn-light" : "btn btn-dark")">
        @item.Title
    </label>
}

<form class="form-inline">

    <div class="form-group d-inline-flex">
        <input type="text" class="form-control d-inline-flex" id="inlineFormInputName2" placeholder="Moby Dick">
    </div>
    <button type="submit" class="btn btn-primary d-inline-flex">Go fetch!</button>
</form>


<div class="container-fluid">
    <div class="row justify-content-center">
        @foreach (var item in Model.Books)
        {
            <div class="card col-sm m-3 p-3">
                <img src="resources/uzbekistan-forests.jpg" class="card-img-top rounded" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Summary</p>
                    <a href="#" class="btn btn-primary">Look at this book!</a>
                </div>
            </div>
        }
    </div>

</div>